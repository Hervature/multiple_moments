<div class="uk-width-1-2 uk-container-center">
  <table class="uk-table">
    <thead>
      <tr>
          <th>Title</th>
          <th></th>
          <th></th>
      </tr>
    </thead>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
        <td><%= link_to "Remove", article, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to "New Article",  new_article_path, :class => "uk-button" %>
</div>