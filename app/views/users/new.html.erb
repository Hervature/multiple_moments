<div class='uk-width-medium-1-2 uk-push-1-4'>
  <%= form_for @user, html: {class: 'uk-form .uk-container-center'}, as: :user do |f| %>
    <fieldset>
      <legend>Create a New User</legend>

      <%= render 'layouts/error_messages', object: f.object %>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :password %> <br />
        <%= f.password_field :password, autocomplete: "off", class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-1-2 uk-push-1-6">
        <%= f.label :user_type %><br />
        <%= f.select :type, [['Editor', 'Editor'], ['Writer', 'Writer'], ['Reader', 'Reader']] %>

        <%= f.submit "Create User", class: 'uk-button uk-button-primary uk-width-2-5 uk-push-2-3' %>
      </div>
    </fieldset>
  <% end %>
</div>
