<div class="uk-width-medium-1-2 uk-push-1-4">
  <%= form_for(@user, html: { method: :put, class: 'uk-form .uk-container-center' }, as: :user) do |f| %>
    <fieldset>
      <legend>Edit User</legend>

      <%= render 'layouts/error_messages', object: f.object %>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'text_input uk-width-1-1' %>
      </div>

      <div class="uk-form-row uk-width-medium-2-3 uk-push-1-6">
        <%= f.submit "Update", class: 'uk-button uk-button-primary uk-width-1-4' %>
      </div>
    </fieldset>
  <% end %>
</div>