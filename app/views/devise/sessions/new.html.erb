<div class='uk-text-center'>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'uk-form .uk-container-center'}) do |f| %>
		<fieldset>
			<legend>Log in</legend>

			<%= devise_error_messages! %>

		  <div class="uk-form-row">
		  	<%= f.label :email %><br />
		  	<%= f.email_field :email, autofocus: true, class: 'text_input' %>
			</div>

		  <div class="uk-form-row">
		  	<%= f.label :password %><br />
		    <%= f.password_field :password, autocomplete: "off", class: 'text_input' %>
		  </div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="uk-form-row">
		    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		    </div>
		  <% end -%>

		  <div class="uk-form-row">
		  	<%= f.submit "Log in", class: 'uk-button' %>
		  </div>
	  </fieldset>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
