<div class='uk-text-center'>	
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'uk-form .uk-container-center' }) do |f| %>
		<fieldset>
			<legend>Change your password</legend>

		  <%= devise_error_messages! %>

		  <%= f.hidden_field :reset_password_token %>

		  <div class="uk-form-row">
		  	<%= f.label :password, "New password" %><br />
		    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'text_input' %>
		  </div>

		  <div class="uk-form-row">
		  	<%= f.label :password_confirmation, "Confirm new password" %><br />
		    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text_input' %>
		  </div>

		  <div class="uk-form-row">
		  	<%= f.submit "Change my password", class: 'uk-button' %>
		  </div>
	  </fieldset>
	<% end %>
	<%= render "devise/shared/links" %>
</div>